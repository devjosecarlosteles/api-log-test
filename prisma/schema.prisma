datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

model Users {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  name String

  // Logs Logs[]

  @@map(name: "users")
}

